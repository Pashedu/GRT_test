extends ../layout

block content

    nav.nav
        div.nav-right
            a(href='/login').nav-item LogIn
            a(href='login/register').nav-item Register

    div.columns
        div.column.is-one-third
            if error
                div.notification.is-danger
                    button.delete
                    span #{error}
            form(action="/login" method="post")
                label.label Login
                    input(type='text', name='login').input
                label.label password
                    input(type='password',name='password').input
                input(type='submit', value='Login').button.is-medium
